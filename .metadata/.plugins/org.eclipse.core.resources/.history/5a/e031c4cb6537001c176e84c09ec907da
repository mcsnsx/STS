package br.org.generation.objetivos;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/objetivos")

public class Objetivos {

	@GetMapping
	public String objetivosShow() {
		return "<h1>Objetivo: Ter mais paciencia</h1>"
				+ "\n\nComo aprimorar? \nAutoavaliação e reconhecimento do que pode debilitar a minha paciência."
				+ "\n\nComo emplementar? \nPretendo entrar em contato com pessoas diversas e buscar ouvir ativamente.";
	}

}





